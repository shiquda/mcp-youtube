{
  "compilerOptions": {
    "removeComments": false,
    "preserveConstEnums": true,
    "sourceMap": true,
    "declaration": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "strictNullChecks": true,
    "noUnusedLocals": true,
    "noImplicitThis": true,
    "noUnusedParameters": true,
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "pretty": true,
    "target": "es2020",
    "outDir": "lib",
    "lib": ["dom", "es2020"],
    "esModuleInterop": true
  },
  "formatCodeOptions": {
    "indentSize": 2,
    "tabSize": 2
  },
  "include": [
    "src/**/*.mts",
    "test/**/*.mts",
    "src/index.ts",
    "test/stripVttNonContent.test.tts"
  ],
  "exclude": ["node_modules", "lib"]
}
